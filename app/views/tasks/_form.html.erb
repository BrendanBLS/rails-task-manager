<%= form_with model: @task, local: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed %>
  <%= f.label :completed %>
  <div class="mt-2">
    <input type="checkbox" class="form-check-input">Check if completed
    <p>
      <%= f.submit %>
    </p>
  </div>
<% end %>
